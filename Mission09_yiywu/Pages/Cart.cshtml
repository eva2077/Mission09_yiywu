@page
@model Mission09_yiywu.Pages.CartModel
@{
}
<h2>Your Basket</h2>
@*display content for the cart page*@
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Item</th>
            <th>Quantity</th>
            <th>Cost</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @*show what book was chosen and price of the book*@
        @foreach(var i in Model.basket.Items)
        {
            <tr>
                <td>@i.Books.Title</td>
                <td>@i.Quantity</td>
                <td>@i.Price</td>
                <td>@((i.Quantity * i.Price).ToString("c"))</td>

                @*Remove Button*@
                <td class="text-center">
                    <form method="post" asp-page-handler="Remove">
                        <input type ="hidden"name ="BookId" value="@i.Books.BookId"/>
                        <input type ="hidden" name="returnUrl" value="@Model.ReturnUrl"/>
                        <button type="submit"class="btn btn-sm btn-danger">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>


<tfoot>
    <tr>
        <td colspan="3">Total:</td>
        <td>@Model.basket.CalcTotal().ToString("c")</td>
   
    </tr>
</tfoot>
</table>
<div>
    <a class="btn btn-primary" href="@Model.ReturnUrl"> Continue Shopping</a>
    <a class="btn btn-primary" asp-controller="Cart"  asp-action="Checkout">Checkout</a>
</div>

